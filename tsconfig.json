{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./.build"
    // "baseUrl": ".",
    // "paths": {
    //   "interfaces/*": ["src/interfaces/*"],
    //   "interfaces": ["src/interfaces"]
    // }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
